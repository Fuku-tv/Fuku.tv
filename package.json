{
  "name": "fuku.tv",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "workspaces/*",
    "tools/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "kill": "taskkill /IM node.exe /F",
    "clean": "git clean -fXd -e !node_modules",
    "clean:deep": "git clean -fXd",
    "start": "lerna run start",
    "dev": "lerna run dev",
    "bump": "yarn upgrade --latest",
    "start:client": "yarn workspace fuku.tv-client start",
    "start:server": "yarn workspace fuku.tv-server start:dev",
    "lint": "lerna run lint",
    "lint:client": "yarn workspace fuku.tv-client lint",
    "lint:server": "yarn workspace fuku.tv-server lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:client": "yarn workspace fuku.tv-client build",
    "build:server": "yarn workspace fuku.tv-server build",
    "build:iot": "yarn workspace fuku.tv-iot build",
    "update": "yarn upgrade-interactive --latest",
    "assemble": "lerna run assemble",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{scss}": [
      "stylelint **/*.scss"
    ],
    "*": [
      "pretty-quick --staged"
    ]
  },
  "devDependencies": {
    "cp-cli": "^2.0.0",
    "cross-env": "^7.0.3",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "serve": "^12.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.3.5",
    "wscat": "^4.0.1"
  },
  "dependencies": {
    "eslint-config-core": "*",
    "jest-config-core": "*",
    "ts-compile": "*"
  }
}
