{
  "name": "fuku.tv-client",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "parcel serve src/index.html  --open --https",
    "serve": "serve dist",
    "dev": "yarn start",
    "prebuild": "rimraf dist",
    "build": "parcel build src/index.html",
    "lint": "yarn lint:code && yarn lint:style",
    "lint:code": "eslint . --ext .ts,.tsx --fix",
    "lint:style": "stylelint **/*.scss --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.4.0",
    "@chakra-ui/react": "^2.0.0",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/east-sea-dokdo": "^4.5.8",
    "@fontsource/inter": "^4.5.10",
    "@fontsource/rubik": "^4.5.9",
    "@reduxjs/toolkit": "^1.5.1",
    "@sentry/react": "^6.9.0",
    "@sentry/tracing": "^6.9.0",
    "@stripe/react-stripe-js": "^1.2.2",
    "@stripe/stripe-js": "^1.16.0",
    "axios": "^0.21.1",
    "canvas-confetti": "^1.3.2",
    "framer-motion": "^6.3.3",
    "hamburger-react": "^2.5.0",
    "react": "^18.1.0",
    "react-awesome-button": "^6.5.1",
    "react-circular-progressbar": "^2.0.4",
    "react-cookie-consent": "^7.4.1",
    "react-countdown-circle-timer": "^3.0.9",
    "react-device-detect": "^1.15.0",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-paypal-js": "^0.0.1-security",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-router-sitemap": "^1.2.0",
    "react-tooltip": "^4.2.17",
    "react-transition-group": "^4.4.1",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "stripe": "^8.164.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.5.0",
    "@parcel/packager-xml": "2.5.0",
    "@parcel/transformer-image": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "@types/canvas-confetti": "^1.4.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/redux": "^3.6.0",
    "parcel": "^2.5.0",
    "parcel-config-pwa-manifest": "^0.1.2",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "react-snap": "^1.23.0",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "peerDependencies": {
    "fuku.tv-shared": "*",
    "h264-live-player": "*"
  },
  "alias": {
    "src": "./src"
  },
  "pwaManifest": {
    "name": "Fuku.tv",
    "shortName": "Fuku.tv",
    "startURL": "/",
    "theme": "#000000",
    "generateIconOptions": {
      "baseIcon": "./static/fuku.png",
      "genFavicons": true
    },
    "development": {
      "disabled": true
    }
  },
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "reactSnap": {
    "source": "dist",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  }
}
