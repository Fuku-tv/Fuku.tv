{
  "name": "fuku.tv-client",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html  --open --https ",
    "serve": "serve dist",
    "dev": "yarn start",
    "prebuild": "rimraf dist",
    "build": "parcel build src/index.html --public-url ./ ",
    "lint": "yarn lint:code && yarn lint:style",
    "lint:code": "eslint . --ext .ts,.tsx --fix",
    "lint:style": "stylelint **/*.scss --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.4.0",
    "@emotion/css": "^11.1.3",
    "@reduxjs/toolkit": "^1.5.1",
    "@sentry/react": "^6.9.0",
    "@sentry/tracing": "^6.9.0",
    "@stripe/react-stripe-js": "^1.2.2",
    "@stripe/stripe-js": "^1.16.0",
    "@types/react-redux": "^7.1.18",
    "@types/redux": "^3.6.0",
    "axios": "^0.21.1",
    "canvas-confetti": "^1.3.2",
    "hamburger-react": "^2.4.0",
    "react": "^17.0.0",
    "react-awesome-button": "^6.5.1",
    "react-circular-progressbar": "^2.0.4",
    "react-cookie-consent": "^6.2.3",
    "react-countdown-circle-timer": "^2.5.1",
    "react-device-detect": "^1.15.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-router-sitemap": "^1.2.0",
    "react-tooltip": "^4.2.17",
    "react-transition-group": "^4.4.1",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "stripe": "^8.164.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.0.0-beta.3.1",
    "@parcel/transformer-image": "2.0.0-beta.3.1",
    "@parcel/transformer-sass": "2.0.0-beta.3.1",
    "@storybook/addon-actions": "^6.3.5",
    "@storybook/addon-essentials": "^6.3.5",
    "@storybook/addon-links": "^6.3.5",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.3.5",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "autoprefixer": "^10.3.1",
    "parcel": "2.0.0-beta.3.1",
    "parcel-config-pwa-manifest": "^0.0.9",
    "parcel-reporter-static-files-copy": "^1.2.2",
    "postcss": "^8.3.6",
    "react-snap": "^1.23.0",
    "sass": "^1.37.5",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "peerDependencies": {
    "fuku.tv-shared": "*",
    "h264-live-player": "*"
  },
  "alias": {
    "src": "./src"
  },
  "pwaManifest": {
    "name": "Fuku.tv",
    "shortName": "Fuku.tv",
    "startURL": "/",
    "theme": "#000000",
    "generateIconOptions": {
      "baseIcon": "./static/fuku.png",
      "genFavicons": true
    },
    "development": {
      "disabled": true
    }
  },
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "reactSnap": {
    "source": "dist",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  }
}
